<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="TakeOutButton" owl="1">
        <span
            class="control-button js_take_out"
            t-if="env.pos.config.iface_show_takeout_option"
        >
            <div t-if="currentOrder.eat_here">
                <i class="fa fa-cutlery" />
                <span>Eat Here</span>
            </div>
            <div t-else="">
                <i class="fa fa-sign-out" />
                <span>Take Out</span>
            </div>
        </span>
    </t>

</templates>
