<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-extend="PaymentScreenWidget">
        <t t-jquery=".next" t-operation="after">
            <span
                class="button in_cashdro_transaction"
                style="right: 0px; margin-right: 150px;"
            >
                <img
                    src="/web/static/src/img/spin.png"
                    style="animation: fa-spin 1s infinite steps(12);width: 20px;height: auto;vertical-align: middle; "
                />
            </span>
        </t>
    </t>
    <t t-extend="PaymentScreen-Paymentlines">
        <t t-jquery=".col-name" t-operation="append">
                <t t-if="line.cashregister.journal.cashdro_payment_terminal">
                    <!-- Stop transaction button -->
                    <button
                    class="payment-terminal-transaction cashdro-transaction-cancel oe_hidden"
                    t-att-data-cid="line.cid"
                    title="Cancel transaction"
                >
                        <i class="fa fa-ban" />
                    </button>
                    <!-- Request payment button -->
                        <button
                    class="payment-terminal-transaction cashdro-transaction-start"
                    t-att-data-cid="line.cid"
                    title="Start transaction"
                >
                        <i class="fa fa-money" />
                    </button>
            </t>
        </t>
    </t>
</templates>
