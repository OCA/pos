<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_journal_pos_user_form" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field
            name="inherit_id"
            ref="point_of_sale.view_account_journal_pos_user_form"
        />
        <field name="arch" type="xml">
            <group name="amount_authorized" position="after">
                <group
                    name="payment_mode_group"
                    attrs="{'invisible': [('type', '!=', 'cash')]}"
                >
                    <field name="cashdro_payment_terminal" />
                    <field
                        name="cashdro_host"
                        attrs="{'invisible': [('cashdro_payment_terminal', '=', False)], 'required': [('cashdro_payment_terminal', '=', True)]}"
                    />
                    <field
                        name="cashdro_user"
                        attrs="{'invisible': [('cashdro_payment_terminal', '=', False)], 'required': [('cashdro_payment_terminal', '=', True)]}"
                    />
                    <field
                        name="cashdro_password"
                        password="True"
                        attrs="{'invisible': [('cashdro_payment_terminal', '=', False)], 'required': [('cashdro_payment_terminal', '=', True)]}"
                    />
                </group>
            </group>
        </field>
    </record>
</odoo>
