<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<template id="pos_kiosk.index" name="POS Kiosk Index">&lt;!DOCTYPE html&gt;
<html>
    <head>
        <title>Odoo POS Kiosk</title>

        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta http-equiv="content-type" content="text/html, charset=utf-8" />

        <meta
                    name="viewport"
                    content="width=device-width, initial-scale=1, user-scalable=no"
                />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="mobile-web-app-capable" content="yes" />

        <style> body { background: #222; } </style>

        <script type="text/javascript">
            var odoo = <t
                        t-raw="json.dumps({
                'csrf_token': request.csrf_token(None),
                'session_info': session_info,
                'login_number': login_number,
                'debug': debug,
            })"
                    />;
        </script>

        <script src="https://cdn.tailwindcss.com" />
        <script>
            tailwind.config = {
                "theme": {
                    "screens": {
                        "tablet": {'raw': '(min-height: 720px)'},
                        "kiosk": {'raw': '(min-height: 1080px)'}
                    }
                }
            }
        </script>

        <t t-call="pos_kiosk.assets_common" />
        <script type="text/javascript" src="/pos_kiosk/static/src/js/main.js" />
    </head>
    <body>
    </body>
</html>
</template>

</odoo>
