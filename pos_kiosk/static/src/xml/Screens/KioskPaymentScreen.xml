<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="KioskPaymentScreen" owl="1">
        <div class="grow shrink basis-0 flex-col justify-start items-center inline-flex">
            <div class="relative w-screen h-[10%] overflow-hidden opacity-30">
                <img class="w-full h-[30vh] object-cover" t-att-src="topBannerLogo" alt="Banner Logo" />
            </div>

            <div class="absolute inset-x-0 top-[20vh] pt-15 pb-5 flex-col justify-start items-center flex z-10">
                <div class="h-[12%] px-8 pt-3 pb-4 flex-col justify-center items-center gap-4 flex">
                    <div class="text-justify text-black text-4xl font-bold leading-10">
                        Finalizar Pedido
                    </div>
                    <div class="text-justify text-black text-2xl font-normal leading-loose">
                        Escolha sua forma de pagamento
                    </div>
                </div>
                <div class="px-8 py-3 justify-center items-center gap-12 inline-flex">
                    <div class="h-[230px] justify-between items-center flex">
                        <t t-foreach="payment_methods" t-as="payment_method" t-key="payment_method.id">
                            <div class="w-[150px] h-[150px] ml-2 bg-white rounded-xl shadow border border-gray-300 flex-col justify-center items-center gap-4 inline-flex" t-on-click="addPaymentLine(payment_method)">
                                <div class="text-gray-800 text-xl font-bold leading-7">
                                    <t t-esc="payment_method.name" />
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>

            <div class="absolute top-[65vh] w-screen p-2 justify-center items-center gap-4 inline-flex">
                <div class="self-stretch justify-between items-center gap-8 flex">
                    <div class="px-8 py-5 rounded-lg border border-gray-400 justify-center items-center gap-2 flex" t-on-click="backScreen">
                        <div class="text-justify text-gray-800 text-xl font-semibold leading-7">
                            Voltar
                        </div>
                    </div>

                    <div class="justify-center items-center gap-4 flex">
                        <div class="justify-start items-center gap-4 flex">
                            <div class="px-8 py-5 rounded-lg border border-gray-400 justify-center items-center gap-2 flex" t-on-click="openCartModal">
                                <div class="justify-center items-center gap-2 flex">
                                    <div class="flex-col justify-center items-start gap-1 inline-flex">
                                        <div class="text-justify text-gray-800 text-base font-bold leading-none">
                                            <i class="fa fa-shopping-cart" />
                                            <t t-esc="countTotalItens()"/>
                                            Itens
                                        </div>
                                        <div class="text-justify text-gray-800 text-sm font-normal leading-[14px]">
                                            Ver carrinho
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <t t-if="hasPaymentline()">
                                <div class="py-5 px-8 bg-red-500 rounded-lg justify-center items-center gap-8 flex" t-on-click="finalizeOrder()">
                                    <div class="text-justify text-gray-50 text-lg font-semibold leading-7">
                                        <t t-esc="getTotalValue()" />
                                    </div>
                                    <div class="justify-start items-center gap-2 flex">
                                        <div class="text-justify text-gray-50 text-xl font-semibold leading-7">
                                            Finalizar pedido
                                        </div>
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <div class="py-5 px-8 bg-gray-400 rounded-lg justify-center items-center gap-8 flex">
                                    <div class="text-justify text-gray-50 text-lg font-semibold leading-7">
                                        <t t-esc="getTotalValue()" />
                                    </div>
                                    <div class="justify-start items-center gap-2 flex">
                                        <div class="text-justify text-gray-50 text-xl font-semibold leading-7">
                                            Finalizar pedido
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
