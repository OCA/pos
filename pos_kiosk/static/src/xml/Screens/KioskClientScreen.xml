<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="KioskClientScreen" owl="1">
        <div class="client grow shrink basis-0 flex-col justify-start items-center inline-flex">
            <div class="relative w-screen h-[10%] overflow-hidden opacity-30" style="background: linear-gradient(to top, #ff0000, #00ff00);">
                <img class="w-full h-[30vh] object-cover" t-att-src="topBannerLogo" alt="Banner Logo" />
            </div>

            <div class="title-container absolute inset-x-0 flex-col justify-start items-center flex z-10">
                <div class="h-[12%] px-8 pt-3 pb-4 flex-col justify-center items-center gap-4 flex">
                    <div class="main-title text-justify text-black font-bold">
                        Para quem Ã© o pedido?
                    </div>
                    <div class="sub-title text-justify text-black font-normal">
                        Informe seu nome
                    </div>
                </div>
            </div>

            <div class="px-8 py-14 flex-col justify-center items-center gap-8 inline-flex">
                <div class="flex-col justify-center items-start gap-4 flex">
                    <div class="text-justify text-gray-900 text-lg font-normal leading-7">Seu nome</div>
                    <input name="name" t-on-change="changeName" class="w-96 h-20 p-5 bg-white rounded-xl shadow-inner border border-gray-400 justify-start items-start gap-2 inline-flex" />
                </div>

                <div class="flex-col justify-center items-start gap-4 flex">
                    <div class="text-justify text-gray-900 text-lg font-normal leading-7">CPF (opcional)</div>
                    <input name="vat" t-on-change="changeVat" class="w-96 h-20 p-5 bg-white rounded-xl shadow-inner border border-gray-400 justify-start items-start gap-2 inline-flex" />
                </div>
            </div>

            <div class="w-screen p-2 justify-center items-center gap-4">
                <div class="self-stretch justify-between items-center gap-8 flex">

                    <div class="px-8 py-5 rounded-lg border border-gray-400 justify-center items-center gap-2 flex" t-on-click="backScreen">
                        <div class="text-justify text-gray-800 text-xl font-semibold leading-7">
                            Voltar
                        </div>
                    </div>

                    <div t-attf-class="w-96 h-20 px-8 bg-red-500 rounded-lg justify-center items-center gap-8 inline-flex {{ currentOrder.client_name ? '' : 'opacity-40' }}" t-on-click="finalizeOrder()">
                        <div class="justify-start items-center gap-2 flex">
                            <div class="text-justify text-gray-50 text-xl font-semibold leading-7">Continuar</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
