<odoo>

    <record id="view_restaurant_printer_form" model="ir.ui.view">
        <field name="name">pos.restaurant.form.view</field>
        <field name="model">restaurant.printer</field>
        <field name="inherit_id" ref="pos_restaurant.view_restaurant_printer_form" />
        <field name="arch" type="xml">
            <field name="printer_type" position="after">
                <field
                    name="cups_printer_name"
                    attrs="{'invisible': [('printer_type', '!=', 'cups')]}"
                />
            </field>
        </field>
    </record>

</odoo>
