<templates id="template" xml:space="preserve">

    <t
        t-name="ReceiptScreen"
        t-inherit="pos_receipt_usability.ReceiptScreen"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[hasclass('validation')]" position="attributes">
            <attribute
                name="t-att-class"
            >{highlight: !locked, 'two_button': !hideContinueCashIn}</attribute>
        </xpath>

        <xpath expr="//div[hasclass('validation')]" position="before">
                <div
                class="button continue-cash-in validation"
                t-att-class="{'oe_hidden': hideContinueCashIn, 'two_button': !hideContinueCashIn}"
                t-on-click="continueCashIn"
            >
                    <div class="pay-circle">
                        <i
                        class="fa fa-chevron-up"
                        role="img"
                        aria-label="Continue to Cash In"
                        title="Continue to Cash In"
                    />
                    </div>
                    Continue to Cash In
                </div>

        </xpath>

    </t>

</templates>
