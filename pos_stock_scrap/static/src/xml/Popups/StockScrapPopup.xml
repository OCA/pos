<templates id="template" xml:space="preserve">

    <t t-name="StockScrapPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup stock-scrap-popup">
                <header class="title">
                    STOCK SCRAP
                </header>
                <main class="body">
                    <div class="row">
                        <div class="fields stock-scrap-form">
                            <div class="popup-table-wrapper">
                                <table class="scrap-product-table" data-page-length="4">
                                    <thead>
                                        <tr class="header">
                                            <th>Name</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <tr
                                            t-foreach="templates"
                                            t-as="tmpl"
                                            t-key="tmpl.name"
                                        >
                                            <td
                                                t-esc="tmpl.name"
                                                t-att-value="tmpl.id"
                                            />
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div class="popup-form" t-if="state.productId">
                                <span class="field-label">Variant: </span>
                                <select
                                    class="pos-input pos-input-select"
                                    style="width: 500px !important"
                                    t-model="state.productVariantId"
                                >
                                    <option
                                        id="variantId"
                                        t-foreach="variants"
                                        t-as="var"
                                        t-key="var.display_name"
                                        t-att-value="var.id"
                                    >
                                        <t t-esc="var.display_name" />
                                    </option>
                                </select>

                                <span class="field-label">Quantity: </span>
                                <input
                                    class="pos-input"
                                    type="number"
                                    t-model="state.productQty"
                                />
                            </div>

                            <div class="popup-form" t-if="env.pos.scrap_reason_codes">
                                <span class="field-label">Scrap Reason: </span>
                                <select
                                    class="pos-input pos-input-select"
                                    t-model="state.scrapReasonId"
                                >
                                    <option
                                        t-foreach="env.pos.scrap_reason_codes"
                                        t-as="code"
                                        t-key="code.name"
                                        t-att-value="code.id"
                                    >
                                        <t t-esc="code.name" />
                                    </option>
                                </select>
                            </div>

                            <div class="error-msg popup-form">
                                Please fill the necessary data.
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button" t-on-click="cancel()">Cancel</div>
                    <div class="button" t-on-click="createStockScrap()">Create</div>
                </footer>
            </div>
        </div>
    </t>

</templates>
