<templates id="template" xml:space="preserve">

    <t t-name="StockScrapPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup stock-scrap-popup">
                <header class="title">
                    STOCK SCRAP
                </header>
                <main class="body">
                    <div class="row">
                        <div class="fields stock-scrap-form">
                            <div class="popup-table-wrapper">
                                <table class="scrap-product-table" data-page-length="4">
                                    <thead>
                                        <tr class="header">
                                            <th>Name</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <tr
                                            t-foreach="templates_list"
                                            t-as="tmpl"
                                            t-key="tmpl.name"
                                        >
                                            <td
                                                t-esc="tmpl.name"
                                                t-att-value="tmpl.id"
                                            />
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div t-if="state.productId">
                                <div class="popup-form-input">
                                    <span class="field-label" style="display: block;">
                                        Variant:
                                    </span>
                                    <CustomSelect
                                        id="variant_select_id"
                                        list="variants_list"
                                        width="500"
                                    />
                                </div>

                                <div
                                    class="popup-form-input"
                                    t-if="env.pos.db.scrap_reason_code_by_id"
                                >
                                    <span class="field-label" style="display: block;">
                                        Scrap Reason:
                                    </span>
                                    <CustomSelect
                                        id="reason_code_select_id"
                                        list="reason_codes_list"
                                        width="500"
                                    />
                                </div>

                                <div class="popup-form-input">
                                    <span class="field-label">Quantity: </span>
                                    <input
                                        class="pos-input"
                                        type="number"
                                        t-model="state.productQty"
                                    />
                                </div>
                            </div>

                            <div class="error-msg popup-form-input">
                                Please fill the necessary data.
                            </div>
                        </div>
                    </div>
                </main>
                <footer class="footer">
                    <div class="button" t-on-click="cancel()">Cancel</div>
                    <div class="button" t-on-click="createStockScrap()">Create</div>
                </footer>
            </div>
        </div>
    </t>

</templates>
