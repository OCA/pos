<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos.config.form (in pos_stock_scrap)</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='inventory_location']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="scrap_source_location_id" />
                        <div class="text-muted">
                            Source location for stock scrap on PoS<br />
                        </div>
                        <div class="content-group mt16">
                            <field name="scrap_source_location_id" />
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="scrap_location_id" />
                        <div class="text-muted">
                            Location for stock scrap on PoS<br />
                        </div>
                        <div class="content-group mt16">
                            <field name="scrap_location_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
