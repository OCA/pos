<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t
        t-name="NumpadWidget"
        t-inherit="point_of_sale.NumpadWidget"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath
            expr="div[hasclass('numpad')]//button[hasclass('numpad-minus')]"
            position="attributes"
        >
            <attribute
                name="t-att-class"
                t-translation="off"
            >{'disabled-mode': !hasMinusControlRights}</attribute>
            <attribute
                name="t-att-disabled"
                t-translation="off"
            >!hasMinusControlRights</attribute>
        </xpath>

        <xpath
            expr="div[hasclass('numpad')]//button[hasclass('numpad-backspace')]"
            position="attributes"
        >
            <attribute
                name="t-att-class"
                t-translation="off"
            >{'disabled-mode': !hasDeleteItemControlRights}</attribute>
            <attribute
                name="t-att-disabled"
                t-translation="off"
            >!hasDeleteItemControlRights</attribute>
        </xpath>



    </t>

</templates>
