<?xml version="1.0" encoding="utf-8" ?>
<template>
    <t t-name="SelectComboPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text popup-lg ">
                <header class="title">
                    <t t-esc="state.product.name" />
                </header>

                <main class="body select-combo col-lg-4 col-md-6 col-sm-12">
                    <div class="product-combo-category">
                        <t
                            t-foreach="state.combo_categories"
                            t-as="category"
                            t-key="category.id"
                        >
                            <ComboCategoryController category="category" />
                        </t>
                    </div>
                </main>
                <t t-esc="state.error_msg" />
                <footer class="footer">
                    <div class="button confirm" t-on-click="confirm_combo">
                        Confirm
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>
</template>
