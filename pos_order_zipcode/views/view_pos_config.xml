<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//h2[@name='order']" position="before">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_order_zipcode_zip_required"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_order_zipcode_zip_required"/>
                            <div class="text-muted">
                                When checked Zip code is required to validate payment and print ticket
                                in order to use that information for the catchment area.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
