<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_view_form_inherit_pos_coupon" model="ir.ui.view">
        <field name="name">res.config.form.inherit.pos.coupon</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="multicurrencies_setting" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    title="Manage promotion and coupon programs."
                >
                    <div class="o_setting_right_pane" id="pos-coupon">
                        <label for=" " string="Coupons &amp; Promotions" />
                        <div class="text-muted">
                            Manage promotion &amp; coupon programs
                        </div>
                        <div class="mt8">
                            <button
                                name="%(sale_coupon.sale_coupon_program_action_promo_program)d"
                                icon="fa-arrow-right"
                                type="action"
                                string="Promotion Programs"
                                class="btn-link"
                            />
                        </div>
                        <div class="mt8">
                            <button
                                name="%(sale_coupon.sale_coupon_program_action_coupon_program)d"
                                icon="fa-arrow-right"
                                type="action"
                                string="Coupon Programs"
                                class="btn-link"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
