<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_order_attachment.AttachmentsButton">
        <div
            class="control-button customer-button btn rounded-0 fw-bolder text-truncate"
            t-attf-class="{{this.prescriber ? 'btn-primary' : 'btn-light'}}"
            t-on-click="() => this.click()"
        >
            <i
                class="fa fa-paperclip"
                role="img"
                aria-label="Attachments"
                title="Attachments"
            />
            <t t-esc="this.message_attachment_count || 0" />
            Attachments
        </div>
    </t>
</templates>
