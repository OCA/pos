<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('validation-buttons')]" position="inside">
            <button
                t-if="printOtherOrders"
                class="button next validation btn btn-primary w-100 py-5 rounded-0 fs-2"
                t-att-class="{ highlight: !locked }"
                t-on-click="printNextOrder"
                name="print_next"
            >
                <i
                    class="fa fa-chevron-right"
                    role="img"
                    aria-label="Pay"
                    title="Pay"
                />
                Print next
            </button>
        </xpath>
        <xpath
            expr="//div[hasclass('validation-buttons')]//button[@name='done']"
            position="attributes"
        >
            <attribute name="t-if">!printOtherOrders</attribute>
        </xpath>
        <xpath expr="//div[hasclass('switchpane')]" position="inside">
            <div
                class="btn-switchpane validation-button btn btn-primary flex-fill d-flex justify-content-center align-items-center rounded-0 fw-bolder fs-1"
                t-att-class="{ highlight: !locked }"
                t-if="printOtherOrders"
                t-on-click="printNextOrder"
                name="print_next"
            >
                Print next
            </div>
        </xpath>
        <xpath
            expr="//div[hasclass('switchpane')]//div[@name='done']"
            position="attributes"
        >
            <attribute name="t-if">!printOtherOrders</attribute>
        </xpath>
    </t>

</templates>
