<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_form_view_inherit_pos_warning" model="ir.ui.view">
        <field name="name">product.template.form.inherit.warning</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_categ_id']" position="after">
                <field name="pos_warn_msg" />
            </xpath>
        </field>
    </record>

</odoo>
