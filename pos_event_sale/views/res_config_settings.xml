<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="inside">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    groups="event.group_event_user"
                >
                    <div class="o_setting_left_pane">
                        <field
                            name="pos_iface_event_sale"
                            attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                        />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_iface_event_sale" />
                        <div
                            class="content-group mt16"
                            attrs="{'invisible': [('pos_iface_event_sale', '=', False)]}"
                        >
                            <div class="mt8">
                                <label
                                    for="pos_iface_event_seats_available_warning"
                                    string="Display a warning when available seats is below"
                                    class="o_light_label"
                                />
                                <field
                                    name="pos_iface_event_seats_available_warning"
                                    class="col-1 text-center oe_inline"
                                />
                            </div>
                            <div class="mt8" groups="base.group_no_one">
                                <label
                                    class="o_light_label"
                                    for="pos_iface_event_load_days_before"
                                    string="Load"
                                />
                                <field
                                    name="pos_iface_event_load_days_before"
                                    nolabel="1"
                                    class="col-1 text-center oe_inline"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                                <label
                                    class="o_light_label"
                                    for="pos_iface_event_load_days_before"
                                    string="days before today, "
                                />
                                <label
                                    class="o_light_label"
                                    for="pos_iface_event_load_days_after"
                                    string="and"
                                />
                                <field
                                    name="pos_iface_event_load_days_after"
                                    nolabel="1"
                                    class="col-1 text-center oe_inline"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                                <label
                                    class="o_light_label"
                                    for="pos_iface_event_load_days_after"
                                    string="days after today"
                                />
                            </div>
                            <div class="row mt8">
                                <label
                                    class="col-lg-3 o_light_label"
                                    for="pos_iface_available_event_stage_ids"
                                    string="Stages"
                                />
                                <field
                                    name="pos_iface_available_event_stage_ids"
                                    widget="many2many_tags"
                                    options="{'no_create': True}"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                            </div>
                            <div class="row mt8">
                                <label
                                    class="col-lg-3 o_light_label"
                                    for="pos_iface_available_event_type_ids"
                                    string="Types"
                                />
                                <field
                                    name="pos_iface_available_event_type_ids"
                                    widget="many2many_tags"
                                    options="{'no_create': True}"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                            </div>
                            <div class="row mt8">
                                <label
                                    class="col-lg-3 o_light_label"
                                    for="pos_iface_available_event_tag_ids"
                                    string="Tags"
                                />
                                <field
                                    name="pos_iface_available_event_tag_ids"
                                    widget="many2many_tags"
                                    options="{'no_create': True}"
                                    attrs="{'readonly': [('pos_has_active_session','=', True)]}"
                                />
                            </div>
                            <div class="mt16">
                                <button
                                    name="%(event.event_stage_action)d"
                                    icon="fa-arrow-right"
                                    type="action"
                                    string="Event Stages"
                                    class="btn-link"
                                />
                                <button
                                    name="%(event.action_event_type)d"
                                    icon="fa-arrow-right"
                                    type="action"
                                    string="Event Types"
                                    class="btn-link"
                                />
                                <button
                                    name="%(event.event_tag_category_action_tree)d"
                                    icon="fa-arrow-right"
                                    type="action"
                                    string="Event Tags"
                                    class="btn-link"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
