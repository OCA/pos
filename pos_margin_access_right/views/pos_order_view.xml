<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pmar_view_pos_pos_form" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='lines']/tree/field[@name='total_cost']"
                position="attributes"
            >
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>
            <xpath
                expr="//field[@name='lines']/tree/field[@name='margin']"
                position="attributes"
            >
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>
            <xpath
                expr="//field[@name='lines']/tree/field[@name='margin_percent']"
                position="attributes"
            >
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>
            <xpath
                expr="//group[@name='order_total']/div[hasclass('text-nowrap')]/field[@name='margin']"
                position="attributes"
            >
                <attribute name="groups">account.group_account_user</attribute>
            </xpath>
        </field>
    </record>
</odoo>
