<odoo>

    <record model="ir.ui.view" id="pos_category_form_view">
        <field
            name="name"
        >pos.category.form (in pos_favorite_product_categories)</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_form_view" />
        <field name="arch" type="xml">
            <field name="parent_id" position="before">
                <field name="favorite" widget="priority" />
                <field
                    name="only_favorite_bar"
                    attrs="{'invisible': [('favorite', '=', '0')]}"
                />
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="pos_category_tree_view">
        <field
            name="name"
        >pos.category.tree (in pos_favorite_product_categories)</field>
        <field name="model">pos.category</field>
        <field name="inherit_id" ref="point_of_sale.product_pos_category_tree_view" />
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="favorite" widget="priority" />
            </field>
        </field>
    </record>

</odoo>
