<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">res.config.settings.viewform</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_pricing_section" position="after">
                <h2>Customer</h2>
                <div class="row mt16 o_settings_container" id="pos_crm_ask">
                    <div class="col-xs-12 col-lg-6 o_setting_box" id="pos_crm_ask">
                        <div class="o_setting_right_pane">
                            <label for="pos_crm_question" string="CRM" />
                            <div class="text-muted">
                                Ask Customer
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field
                                        name="pos_crm_question"
                                        class="o_light_label"
                                        widget="radio"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div
                        class="col-xs-12 col-lg-6 o_setting_box"
                        attrs="{'invisible': [('pos_crm_question','=', 'no')]}"
                    >
                        <div class="o_setting_left_pane">
                            <field name="pos_crm_auto_create_partner" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_crm_auto_create_partner" />
                            <div class="text-muted">
                                Automaticaly create a customer with the VAT number.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
