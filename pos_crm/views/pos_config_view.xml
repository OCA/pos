<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">view.pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <div id="product_prices" position="after">
                <div class="col-xs-12 col-lg-6 o_setting_box" id="pos_crm">
                    <div class="o_setting_right_pane">
                        <label for="pos_crm_question" string="CRM" />
                        <div class="text-muted">
                            Ask Customer
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="pos_crm_question"
                                    class="o_light_label"
                                    widget="radio"
                                />
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="pos_crm_auto_create_partner" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
