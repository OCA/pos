<odoo>
    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form (in pos_product_price_event)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='update_quantities_stock_setting']/.."
                position="after"
            >
                <h2>Product Events</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="product_event_container"
                >
                    <div
                        class="col-12 col-lg-6 o_setting_box"
                        id="warning_product_availability_setting"
                    >
                        <div class="o_setting_left_pane">
                            <field name="warning_product_availability" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                for="warning_product_availability"
                                string="Display Warning"
                            />
                            <div class="text-muted">
                                Display a warning when changing product availability
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
