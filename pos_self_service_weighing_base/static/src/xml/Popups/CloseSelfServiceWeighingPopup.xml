<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_self_service_weighing_base.CloseSelfServiceWeighingPopup" owl="1">
        <div class="popup close-self-service-popup">
            <header>
                <div class="title">Closing Weighing Point</div>
            </header>
            <main class="body">
                <div>Are you sure you want to close the weighing point ?</div>
            </main>
            <footer class="footer">
                <div class="button highlight" t-on-click="confirm">Close</div>
                <div class="button" t-on-click="cancel">Discard</div>
            </footer>
        </div>
    </t>
</templates>
