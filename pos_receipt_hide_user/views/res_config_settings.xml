<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record
        id="pos_receipt_hide_user_res_config_settings_view_form_inherit"
        model="ir.ui.view"
    >
        <field
            name="name"
        >pos.receipt.hide.user.res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='auto_printing']" position="inside">
                <div class="o_setting_left_pane mt-4">
                    <field name="pos_hide_user" />
                </div>
                <div class="o_setting_right_pane mt-4">
                    <label for="pos_hide_user" />
                </div>
            </xpath>

        </field>
    </record>

</odoo>
