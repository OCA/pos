<odoo>

    <record id="view_account_move_search" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="place_id" groups="pos_place.group_pos_place_user" />
            </field>
            <filter name="status" position="after">
               <filter
                    name="status"
                    string="Place"
                    context="{'group_by':'place_id'}"
                    groups="pos_place.group_pos_place_user"
                />
            </filter>
        </field>
    </record>

    <record id="view_account_move_tree" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <field name="invoice_date" position="before">
                <field
                    name="place_id"
                    invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund','out_receipt')"
                    groups="pos_place.group_pos_place_user"
                />
            </field>
        </field>
    </record>

    <record id="view_account_move_form" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="partner_shipping_id" position="before">
                <field
                    name="place_id"
                    groups="pos_place.group_pos_place_user"
                    attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt'))]}"
                />
            </field>
        </field>
    </record>

</odoo>
