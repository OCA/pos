<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="assets" inherit_id="point_of_sale.assets">
            <xpath expr="." position="inside">
                <script
                    type="text/javascript"
                    src="/pos_product_control/static/src/js/Screens/ProductScreen/CashBoxOpening.js"
                />
                <script
                    type="text/javascript"
                    src="/pos_product_control/static/src/js/Popups/ClosePosPopup.js"
                />
            </xpath>

            <xpath expr="//link[@id='pos-stylesheet']" position="after">
                <link
                    rel="stylesheet"
                    href="/pos_product_control/static/src/css/style.css"
                />
            </xpath>
        </template>

    </data>
</odoo>
