<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t
        t-name="CashBoxOpening"
        t-inherit="point_of_sale.CashBoxOpening"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//span[hasclass('currencyCashBox')]" position="after">
            <t t-if="env.pos.config.product_control">
                <h1>Product Control:</h1>
                <t
                    t-foreach="env.pos.config.product_ids"
                    t-as="productID"
                    t-key="productID"
                >
                    <div t-on-input="updateOpeningProductInventory()">
                        <span><t t-esc="name" />:</span>
                        <input class="pos-input" t-att-id="productID" type="number" />
                    </div>
                </t>
            </t>
        </xpath>
    </t>

</templates>
