<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t
        t-name="ClosePosPopup"
        t-inherit="pos_cash_control.ClosePosPopup"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[hasclass('session-overview')]" position="after">
            <div class="product-control">
                <h1>Product Control</h1>
                <div>
                    <t
                        t-foreach="env.pos.config.product_ids"
                        t-as="productID"
                        t-key="productID"
                    >
                        <div
                            class="product-items"
                            t-on-input="updateCloseProductInventory()"
                        >
                            <span class="product-name"><t t-esc="name" />: </span>
                            <input
                                class="pos-input"
                                t-att-id="productID"
                                type="number"
                            />
                        </div>
                    </t>
                </div>
            </div>
        </xpath>
    </t>

</templates>
