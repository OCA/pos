<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.ScaleScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('js-weight')]" position="before">
            <t t-if="env.pos.config.iface_tare_method != 'barcode'">
                <div class="weight-label">
                    Gross Weight
                </div>
                <t t-if="env.pos.config.iface_gross_weight_method == 'scale'">
                    <div class="weight-value weight-value-alterable">
                        <input
                            type="text"
                            class="input-weight"
                            id="input_gross_weight"
                            t-model="state.gross_weight"
                            placeholder="0.000"
                            disabled="1"
                        />
                        <t t-out="env.pos.config.iface_tare_uom_id[1]" />
                    </div>
                </t>
                <t t-else="1">
                    <div class="weight-value weight-value-alterable">
                        <input
                            type="text"
                            class="input-weight"
                            id="input_gross_weight"
                            t-model="state.gross_weight"
                            t-on-change="updateWeight"
                            placeholder="0.000"
                        />
                        <t t-out="env.pos.config.iface_tare_uom_id[1]" />
                    </div>
                </t>
                <div class="weight-label">
                    Tare
                </div>
                <div class="weight-value weight-value-alterable">
                    <input
                        type="text"
                        t-model="state.tare"
                        class="input-weight"
                        id="input_weight_tare"
                        placeholder="0.000"
                        t-on-change="updateWeight"
                    />
                    <t t-out="env.pos.config.iface_tare_uom_id[1]" />
                </div>
            </t>
        </xpath>
    </t>

</templates>
