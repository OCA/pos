<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t
        t-name="Orderline"
        t-inherit="point_of_sale.Orderline"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//ul[hasclass('info-list')]" operation="inside">
            <t t-if="props.line.get_tare() !== 0">
                <li class="info">
                    <i>
                      Gross Weight:
                      <em><t t-out="props.line.get_gross_weight_str_with_unit()" /></em>
                      - Tare:
                      <em><t t-out="props.line.get_tare_str_with_unit()" /></em>
                    </i>
                </li>
            </t>
        </xpath>
    </t>

</templates>
