<?xml version="1.0" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='customer_display']" position="after">
                <div
                    class="col-xs-12 col-lg-6 o_setting_box"
                    id="pos_iface_tare_method"
                >
                    <div class="o_setting_right_pane">
                        <label for="pos_iface_tare_method" string="Tare Input Method" />
                        <div class="text-muted">
                            Configure how to tare products to weight with a scale.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="pos_iface_tare_method"
                                    class="o_light_label"
                                />
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    class="col-xs-12 col-lg-6 o_setting_box"
                    id="pos_iface_tare_method"
                >
                    <div class="o_setting_right_pane">
                        <label for="pos_iface_tare_uom_id" string="Tare UoM" />
                        <div class="text-muted">
                            Unit of Measure of the tares.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="pos_iface_tare_uom_id"
                                    class="o_light_label"
                                />
                            </div>
                        </div>
                    </div>
                </div>
                <div
                    class="col-xs-12 col-lg-6 o_setting_box"
                    id="pos_iface_gross_weight_method"
                >
                    <div class="o_setting_right_pane">
                        <label
                            for="pos_iface_gross_weight_method"
                            string="Gross Weight Input Method"
                        />
                        <div class="text-muted">
                            Configure how to input Gross Weight.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field
                                    name="pos_iface_gross_weight_method"
                                    class="o_light_label"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
