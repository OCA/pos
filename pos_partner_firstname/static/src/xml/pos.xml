<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t
        t-name="point_of_sale.ClientDetailsEdit"
        t-inherit="point_of_sale.ClientDetailsEdit"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//input[@name='name']" position="after">
            <div class="client-details-box clearfix">
                <div class="client-detail">
                    <span class='label'>Company</span>
                    <input
                        type='checkbox'
                        class='detail o_checkbox checkbox is_company'
                        name='is_company'
                        t-att-checked="props.partner.is_company ? 'checked' : null"
                        t-att-value="props.partner.is_company"
                        t-on-change="captureChange"
                    />
                </div>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('client-details-left')]" position="inside">
            <div
                class="is_person"
                t-attf-style="display: {{!props.partner.is_company ? 'block': 'none'}};"
            >
                <div class='client-detail'>
                    <span class='label'>Name</span>
                    <input
                        class='detail firstname person'
                        name="firstname"
                        t-att-value='props.partner.firstname or ""'
                        t-on-change="captureChange"
                    />
                </div>
            </div>
            <div
                class="is_person"
                t-attf-style="display: {{!props.partner.is_company ? 'block': 'none'}};"
            >
                <div class='client-detail'>
                    <span class='label'>Surname</span>
                    <input
                        class='detail lastname person'
                        name="lastname"
                        t-att-value='props.partner.lastname or ""'
                        t-on-change="captureChange"
                    />
                </div>
            </div>
        </xpath>
    </t>
</templates>
