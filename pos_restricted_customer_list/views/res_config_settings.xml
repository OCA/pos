<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form">
        <field name="model">res.config.settings</field>
        <field name="priority" eval="95" />
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[child::div[child::field[@name='pos_start_category']]]"
                position="after"
            >
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_partner_category" string="Partner Category" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_partner_category_id" />
                        <div class="text-muted">
                            Filter partner from selected category
                        </div>
                        <div
                            class="content-group mt16"
                            attrs="{'invisible': [('pos_partner_category', '=', False)]}"
                        >
                            <field name="pos_partner_category_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
