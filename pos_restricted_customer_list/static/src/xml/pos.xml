<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-extend="ClientDetailsEdit">
        <t t-jquery=".client-details-right" t-operation="append">
            <div class="client-detail" style="display:none;">
                <span class="label">Tags</span>
                <select class="detail client-categories needsclick" name="category_id">
                    <t t-foreach="widget.pos.categories" t-as="category">
                        <option
                            t-att-value="category.id"
                            t-att-selected="config.partner_category_id ? ((category.id === config.partner_category_id[0]) ? true : undefined) : undefined"
                        >
                            <t t-esc="category.name" />
                        </option>
                    </t>
                </select>
            </div>
        </t>
    </t>
</templates>
