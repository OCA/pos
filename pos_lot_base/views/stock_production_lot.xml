<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">stock.production.lot.form.inherit</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="product_sale_ok" invisible="1" />
                <field name="product_available_in_pos" invisible="1" />
                <field
                    name="available_in_pos"
                    attrs="{'invisible': ['|', ('product_sale_ok', '=', False), ('product_available_in_pos', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
