<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="required">0</attribute>
                </field>
                <xpath expr="//notebook/page[@string='Other Information']/group" position="inside">
                    <group name="pos">
                        <field name="session_id"/>
                        <field name="pos_reference"/>
                    </group>
                </xpath>
                <field name="section_id" position="attributes">
                    <attribute name="attrs">{'readonly':[('session_id', '!=', False), ('pos_reference', '!=', False), ('section_id', '!=', False)]}</attribute>
                </field>
             </field>
        </record>

    </data>
</openerp>
