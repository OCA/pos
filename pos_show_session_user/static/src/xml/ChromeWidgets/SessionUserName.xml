<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="SessionUserName" owl="1">
        <div class="oe_status" t-if="env.pos.config.module_pos_hr">
            <span class="username" t-if="!env.isMobile">
                <t t-esc="username" />
            </span>
        </div>
    </t>

    <t
        t-name="Chrome"
        t-inherit="point_of_sale.Chrome"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath
            expr="//div[hasclass('pos-rightheader')]/div[hasclass('search-bar-portal')]"
            position="before"
        >
            <SessionUserName />
        </xpath>
    </t>


</templates>
