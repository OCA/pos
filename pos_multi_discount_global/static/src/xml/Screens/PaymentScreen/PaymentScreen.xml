<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-controls')]" position="after">
            <div class="discount-controls">
                <div
                    t-if="env.pos.config.split_fixed_discount"
                    class="button js_fixed_discount"
                    t-att-class="{ highlight: currentOrder.get_fixed_discount_enabled() }"
                    t-on-click="toggleDiscountEnabled"
                >
                    <i class="fa fa-tag" />
                    Discount (fixed)
                </div>
                <div
                    t-if="env.pos.config.split_fixed_discount"
                    class="button js_percent_discount"
                    t-att-class="{ highlight: currentOrder.get_percent_discount_enabled() }"
                    t-on-click="togglePercentDiscountEnabled"
                >
                    <i class="fa fa-tag" />
                    Discount (percentage)
                </div>
            </div>
        </xpath>
        <xpath
            expr="//div[hasclass('right-content')]//PaymentScreenStatus"
            position="replace"
        >
            <PaymentScreenStatus
                paymentLines="paymentLines"
                fixed_discount="state.fixed_discount"
                percent_discount="state.percent_discount"
                percent_discount_amount="state.percent_discount_amount"
            />
        </xpath>
    </t>

</templates>
