<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.PaymentScreenStatus" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-status-remaining')]" position="after">
            <div t-if="props.fixed_discount">
                <span class="fixed_discount_label">Fixed Discount</span>
                <span class="fixed_discount_amount">
                    <t t-esc="props.fixed_discount" />
                </span>
            </div>
            <div t-if="props.percent_discount">
                <span class="fixed_discount_label">Percent Discount</span>
                <span class="fixed_discount_amount">
                    <t t-esc="props.percent_discount" />
                </span>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('total')]" position="after">
            <div t-if="props.fixed_discount" class="fixed_discount_line">
                Fixed discount applied: <t t-esc="props.fixed_discount" />
            </div>
            <div t-if="props.percent_discount" class="fixed_discount_line">
                Percent discount applied: <t t-esc="props.percent_discount" />%
                (<t t-esc="props.percent_discount_amount" />)
            </div>
        </xpath>
    </t>
</templates>
