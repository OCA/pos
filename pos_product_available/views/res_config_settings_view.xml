<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_interface_section']/div/div/field[@name='pos_iface_big_scrollbars']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box" >
                    <div class="o_setting_left_pane">
                        <field name="pos_available_product"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_available_product"/>
                        <div class="text-muted">
                            Products available for this Point of Sale
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('pos_available_product', '=', False)]}"> 
                            <field name="pos_available_product_ids" options="{'no_create': True}" attrs="{'readonly': True}" widget="many2many_tags" domain="[('available_in_pos','=', True), ('pos_categ_id', 'in', pos_iface_available_categ_ids)]" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
