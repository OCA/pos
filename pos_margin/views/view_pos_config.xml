<odoo>

    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pricelist_setting']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="order_margin">
                    <div class="o_setting_left_pane">
                        <field name="iface_display_margin"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="iface_display_margin"/>
                        <div class="text-muted">
                            Display Margin and Margin Rate in the frontend
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
