<templates id="template" xml:space="preserve">
  <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
    <xpath
            expr="//t[@t-else='']/t/div[hasclass('pos-receipt-left-padding')]/t[@t-esc='env.pos.format_currency_no_symbol(line.price)']"
            position="after"
        >
      Â (-<t t-esc="Math.round(100 * (1 - line.price / line.price_lst))" />%)
    </xpath>

    <t
            t-if="line.display_discount_policy == 'without_discount' and line.price != line.price_lst"
            position="attributes"
        >
      <attribute
                name="t-if"
            >line.display_discount_policy == 'without_discount' and line.price &lt; line.price_lst and line.price_lst &gt; 0 and line.price &gt; 0</attribute>
    </t>
  </t>
</templates>
